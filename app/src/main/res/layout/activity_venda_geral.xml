<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="1dp"
    tools:context="com.exemplo.nailson.safad.VendaGeral">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/nomeVendedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAlignment="center"
        android:text="nome"
        android:layout_marginTop="5dp"
        android:textSize="35dp"/>
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:background="#0882f4"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meta"/>
    <ImageView
        android:layout_marginTop="6dp"
        android:background="@drawable/layout_venda"
        android:layout_width="35dp"
        android:layout_alignParentRight="true"
        android:layout_height="35dp" />

</RelativeLayout>
    <TextView
        android:id="@+id/metaVendedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAlignment="center"
        android:text="meta"
        android:layout_marginTop="3dp"
        android:textSize="30dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:background="#0882f4"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Venda até hoje"/>
            <ImageView
                android:layout_marginTop="6dp"
                android:background="@drawable/layout_venda"
                android:layout_width="35dp"
                android:layout_alignParentRight="true"
                android:layout_height="35dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/realizadoVendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:text="realizado"
            android:textSize="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:background="#0882f4"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Falta para bater meta"/>
            <ImageView
                android:layout_marginTop="6dp"
                android:background="@drawable/layout_venda"
                android:layout_width="35dp"
                android:layout_alignParentRight="true"
                android:layout_height="35dp" />

        </RelativeLayout>
        <TextView
            android:id="@+id/vendafaltante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:text="faltante"
            android:textSize="25dp"/>
    </LinearLayout>

       <LinearLayout
           android:orientation="vertical"
           android:layout_weight="5"
           android:paddingBottom="3dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <RelativeLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_marginTop="15dp"
                   android:textAlignment="center"
                   android:background="#0882f4"
                   android:textColor="#ffffff"
                   android:textStyle="bold"
                   android:textSize="14dp"
                   android:layout_marginRight="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Venda dia"/>
               <ImageView
                   android:layout_marginTop="6dp"
                   android:background="@drawable/layout_venda"
                   android:layout_width="35dp"
                   android:layout_alignParentRight="true"
                   android:layout_height="35dp" />

           </RelativeLayout>
        <TextView
            android:id="@+id/vendadia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:text="venda dia"
            android:textSize="30dp"/>
       </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="5"
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:background="#0882f4"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dias ùteis"/>
                <ImageView
                    android:layout_marginTop="6dp"
                    android:background="@drawable/layout_venda"
                    android:layout_width="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="35dp" />

            </RelativeLayout>

        <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/diasuteis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textAlignment="center"
                android:text="dias"
                android:textSize="25dp"/>
        </LinearLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:background="#0882f4"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Porgresso da venda"/>
        <ImageView
            android:layout_marginTop="6dp"
            android:background="@drawable/layout_venda"
            android:layout_width="35dp"
            android:layout_alignParentRight="true"
            android:layout_height="35dp" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/texto"
        android:textSize="18dp"
        android:textColor="#f40202"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:background="#d9c9c9"
        android:layout_centerHorizontal="true"
        android:scrollbarSize="10dp"
        android:layout_marginBottom="10dp"
        android:progressDrawable="@drawable/custom_progressbar"
        android:id="@+id/progress"/>

</LinearLayout>
</ScrollView>
