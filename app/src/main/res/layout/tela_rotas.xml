<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/cardRota">
<TextView
    android:id="@+id/dataEntrega"
    android:layout_width="1dp"
    android:layout_height="1dp"
    android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/telarota"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nomerota"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:paddingLeft="3dp"
                android:text=""
                android:textSize="20dp"
                android:maxLines="1"
                android:textColor="#000000"
                android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <TextView
                android:id="@+id/telefonerota"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:paddingLeft="3dp"
                android:textSize="16dp"
                android:maxLines="1"
                android:layout_weight="10"
                android:textColor="#000000"
                android:text="vendedor" />
    <TextView
        android:id="@+id/statusrota"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_weight="8"
        android:paddingLeft="3dp"
        android:textSize="14dp"
        android:maxLines="1"
        android:textColor="#000000"
        android:text="Status" />
    <ImageView
        android:id="@+id/imgPrioridade"
        android:layout_width="match_parent"
        android:layout_weight="14"
        android:visibility="gone"
        android:background="@drawable/ic_alerta"
        android:layout_height="26dp" />

</LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/framerota"
            android:layout_gravity="center"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="4dp"
            android:padding="10dp"
            android:background="@drawable/emrota"
            >
            <ImageView
                android:id="@+id/imagem_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/carrota"
                android:layout_gravity="center"
                />
        </FrameLayout>
       </LinearLayout>
    <View
        android:background="#c1c1c1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    </LinearLayout>
</LinearLayout>
